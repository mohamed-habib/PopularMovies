<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#066"
        >

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Movie Title"
            android:layout_margin="30dp"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            android:textSize="30sp"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/upper_rv"
        android:layout_marginRight="10dp"
        >

            <ImageView
                android:id="@+id/movie_poster"
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:src="@drawable/no_image"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"

                />


        <LinearLayout
            android:id="@+id/text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/movie_poster"
            android:gravity="start"
            android:layout_marginLeft="20dp"
            >
                <TextView
                    android:id="@+id/movie_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:layout_marginBottom="5dp"
                    />


                <TextView
                    android:id="@+id/movie_vote_average"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:layout_marginBottom="5dp"
                    />


            <TextView
                android:id="@+id/movie_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"/>


        </LinearLayout>

        <ToggleButton
            android:id="@+id/FavtoggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textOn="FAVOURITE"
            android:textOff="MARK AS A FAVOURITE"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/movie_poster"
            android:layout_toEndOf="@+id/text_layout"
            android:background="@android:color/holo_blue_bright"
            android:padding="5dp"
            />


    </RelativeLayout>

<TextView
    android:id="@+id/movie_overview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:text="Content Not Found"
    android:layout_below="@+id/upper_rv"
    />

        <TextView
            android:id="@+id/line1"
            android:layout_below="@id/movie_overview"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"/>

        <LinearLayout
            android:id="@+id/trailers_layout"
            android:layout_below="@+id/line1"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:text="Trailers:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"/>

            <ListView
                android:id="@+id/trailers_list_view"
                android:layout_width="fill_parent"

                android:layout_height="wrap_content"></ListView>

        </LinearLayout>

        <TextView
            android:id="@+id/line2"
            android:layout_below="@id/trailers_layout"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"/>


        <LinearLayout
            android:id="@+id/reviews_layout"
            android:layout_below="@+id/line2"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Reviews:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"/>

            <ListView
                android:id="@+id/reviews_list_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"></ListView>

        </LinearLayout>




    </RelativeLayout>
    </ScrollView>
</LinearLayout>